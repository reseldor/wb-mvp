{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "rootDir": ".",
    "noImplicitAny": false,
    "module": "NodeNext",
    "target": "ES2017",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "skipLibCheck": true
  },
  "allowSyntheticDefaultImports": true,
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.test.*", "src/**/*.spec.*"]
}
